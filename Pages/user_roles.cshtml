                    </div>
                    <div class="btn-toolbar pull-right margin-top-20" role="toolbar" aria-label="Button Toolbar">
                        <div class="btn-group me-2" role="group" aria-label="Group 1">
                            <button type="button" class="btn btn-outline-success">Re-Process Role</button>
                        </div>
                        <div class="btn-group me-2" role="group" aria-label="Group 1">
                            <a asp-page="role_details_revoked" type="button" class="btn btn-outline-danger">Revoke Role</a>
                        </div>
                    </div>
                </div>
                <!--By Account-->
                <div class="tab-pane fade" id="account" role="tabpanel" aria-labelledby="account-tab">
                    <div class="form-floating margin-top-10">
                        <select class="form-select" id="floatingSelect" aria-label="Floating label select example">
                            <option value="0">Choose...</option>
                            <optgroup label="Account: 123456789012345@mil">
                                <option value="1">ABC Citrix User (PIV)</option>
                                <option value="2" selected>ABC AVD Desktop (PIV)</option>
                                <option value="3">DTMS Application User (PIV)</option>
                                <option value="4">DTMS Citrix Access (PIV)</option>
                            </optgroup>
                            <optgroup label="Account: First.M.Last.SA">
                                <option value="5">ABC Application Admin (SA)</option>
                                <option value="6">DTMS Application Admin (SA)</option>
                            </optgroup>
                            <optgroup label="Account: supabc">
