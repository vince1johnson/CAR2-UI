            </ul>
            <div class="tab-content margin-top-20" id="myTabContent">
                <!--By System-->
                <div class="tab-pane fade show active" id="system" role="tabpanel" aria-labelledby="system-tab">
                    <div class="form-floating margin-top-10">
                        <select class="form-select" id="floatingSelect" aria-label="Floating label select example">
                            <option value="0">Choose...</option>
                            <optgroup label="Army Battalion Company (ABC)">
                                <option value="1" selected>ABC AVD Desktop (PIV)</option>
                                <option value="2">ABC Application Admin (SA)</option>
                                <option value="3">ABC Citrix User (PIV)</option>
                            </optgroup>
                            <optgroup label="Defense Toothbrush Mananagement System (DTMS)">
                                <option value="4">DTMS Application Admin (SA)</option>
                                <option value="5">DTMS Application User (PIV)</option>
                                <option value="6">DTMS Citrix Access (PIV)</option>
                            </optgroup>
                        </select>
