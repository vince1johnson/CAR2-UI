@model CAR2_UI.Pages.profileModel
@{
    ViewData["Title"] = "My Profile";
}

<div id="user_profile" class="container">

    <!--USER INFO-->

    <header>
        <div class="row margin-top-10">
            <div class="col-12">
                <nav class="navbar static-top">
                    <h2 class="text-muted">First M Last: &nbsp;<small> My Profile Details</small></h2>
                </nav>
            </div>
        </div>
    </header>

    <!--User UPN-CN-->

